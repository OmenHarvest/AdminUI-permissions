$C = "../../Common.ui";
Group {
  LayoutMode: Top;
  Background: $C.@InputBoxBackground;
  Padding: (Top: 5, Bottom: 3);
  Anchor: ( Bottom: 5);
  Group {
    LayoutMode: Left;
    
    FlexWeight: 1;
    

    Label #MemberName {
        Style: (
        FontSize: 16,
        RenderBold: true,
        TextColor: #ffffff
        );
        Anchor: (Left: 10, Vertical: 0);
        Padding: (Right: 2);
    }

    Label #MemberUUID {
        Style: (
        FontSize: 12,
        RenderBold: false,
        TextColor: #ffffff(0.3)
        );
        Anchor: (Left: 1, Top: 4);
        Padding: (Right: 5);
    }

    Label {
        FlexWeight: 1;
    }

    $C.@CancelTextButton #RemoveMemberButton {
        Anchor: (Right: 10, Vertical: 0, Height: 20);
        Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
        Text: "Remove";
        Overscroll: false;
    }
  }
  Label #MemberReason {
    Style: (
        FontSize: 14,
        RenderBold: false,
        TextColor: #ffffff
    );
    Anchor: (Left: 10, Vertical: 0);
    Padding: (Right: 2);
  }   
  Label #MemberBy {
    Style: (
        FontSize: 14,
        RenderBold: false,
        TextColor: #ffffff
    );
    Anchor: (Left: 10, Vertical: 0);
    Padding: (Right: 2);
  }   
}