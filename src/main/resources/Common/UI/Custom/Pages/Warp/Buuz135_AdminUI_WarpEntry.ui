$C = "../../Common.ui";

@CustomLabelStyle = LabelStyle(
  FontSize: 17,
  TextColor: #bfcdd5,
  RenderBold: true,
  RenderUppercase: true,
  HorizontalAlignment: Center,
  VerticalAlignment: Center
);

@CustomStyle = TextButtonStyle(
  Default: (Background: $C.@DefaultSquareButtonDefaultBackground, LabelStyle: @CustomLabelStyle),
  Hovered: (Background: $C.@DefaultSquareButtonHoveredBackground, LabelStyle: @CustomLabelStyle),
  Pressed: (Background: $C.@DefaultSquareButtonPressedBackground, LabelStyle: @CustomLabelStyle),
  Disabled: (Background: $C.@DefaultSquareButtonDisabledBackground, LabelStyle: @CustomLabelStyle),
  Sounds: $C.@ButtonSounds,
);

Group {
  LayoutMode: Top;
  Background: $C.@InputBoxBackground;
  FlexWeight: 1;
  Padding: (Left: 10, Top: 5, Bottom: 3);
  Anchor: (Bottom: 5);

  Group {
    LayoutMode: Left;
    Anchor: (Height: 20);
    Label #WarpName {
      Style: (
        FontSize: 17,
        RenderBold: true,
        TextColor: #ffffff
      );
      
      Padding: (Right: 2);
    }

    Label #WarpBy {
      Style: (
        FontSize: 12,
        RenderBold: false,
        TextColor: #ffffff(0.3)
      );
      Anchor: (Left: 1, Top: 4);
      Padding: (Right: 5);
    }

    Label {
      FlexWeight: 1;
    }

    $C.@TextButton #GoButton {
      Anchor: (Right: 4, Vertical: 0);
      Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
      Text: "GO";
      Overscroll: false;
      Style: @CustomStyle;
    }
    $C.@CancelTextButton #RemoveWarpButton {
      Anchor: (Right: 10, Vertical: 0);
      Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
      Text: "Remove";
      Overscroll: false;
    }
  }

  Group {
    LayoutMode: Left;
    
    Label  {
      Text: "World: ";
      Style: (
        FontSize: 14,
        RenderBold: true,
        TextColor: #93844c
      );
      Anchor: (Vertical: 0);
    }
    Label #WorldValue {
      Text: "Health:";
      Style: (
        FontSize: 14,
        RenderBold: false,
        TextColor: #ffffff
      );
      Anchor: (Vertical: 0);
    }
    Label  {
      Anchor: (Left: 10);
      Text: "X: ";
      Style: (
        FontSize: 14,
        RenderBold: true,
        TextColor: #93844c
      );
    }
    Label #XValue {
      Text: "Health:";
      Style: (
        FontSize: 14,
        RenderBold: false,
        TextColor: #ffffff
      );
      Anchor: (Vertical: 0);
    }
    Label  {
      Text: "Y: ";
      Style: (
        FontSize: 14,
        RenderBold: true,
        TextColor: #93844c
      );
      Anchor: (Left: 10);
    }
    Label #YValue {
      Text: "Y:";
      Style: (
        FontSize: 14,
        RenderBold: false,
        TextColor: #ffffff
      );
      Anchor: (Vertical: 0);
    }
    Label  {
      Text: "Z: ";
      Style: (
        FontSize: 14,
        RenderBold: true,
        TextColor: #93844c
      );
      Anchor: (Left: 10);
    }
    Label #ZValue {
      Text: "Z:";
      Style: (
        FontSize: 14,
        RenderBold: false,
        TextColor: #ffffff
      );
      Anchor: (Vertical: 0);
    }
  }
  Label #WarpWhen {
      Style: (
        FontSize: 12,
        RenderBold: false,
        TextColor: #ffffff(0.3)
      );
      
    }
}
