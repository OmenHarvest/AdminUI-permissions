$C = "../../Common.ui";
Group {
  LayoutMode: Left;
  Anchor: ( Height: 30, Bottom: 5);
  FlexWeight: 1;
  Background: $C.@InputBoxBackground;
  Padding: (Top: 5, Bottom: 3);

  Label #MemberName {
    Style: (
      FontSize: 16,
      RenderBold: true,
      TextColor: #ffffff
    );
    Anchor: (Left: 10, Vertical: 0);
    Padding: (Right: 2);
  }

  Label #MemberUUID {
    Style: (
      FontSize: 12,
      RenderBold: false,
      TextColor: #ffffff(0.3)
    );
    Anchor: (Left: 1, Top: 4);
    Padding: (Right: 5);
  }

  Label {
    FlexWeight: 1;
  }
  $C.@CancelTextButton #RemoveMemberButton {
    Anchor: (Right: 10, Vertical: 0);
    Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
    Text: "Remove";
    Overscroll: false;
  }
}